@model Stylepit.Models.Cart
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>
<div class="row">

    <div class="col">
        <form action="/shop/Checkout" method="post" id="checkout">
            <input type="hidden" name="CartId" value="@Model.Id" />
            <div class="form-group">
                <label for="firstName">Fornavn</label>
                <input type="text" class="form-control" required name="firstName" />
            </div>
            <div class="form-group">
                <label for="lastName">Efternavn</label>
                <input type="text" class="form-control" required name="lastName" />
            </div>
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="email" class="form-control" required name="email" />
            </div>
            <div class="form-group">
                <label for="address">Adresse</label>
                <input type="text" class="form-control" required name="address" />
            </div>
            <div class="form-group">
                <label for="zipCode">Post nr</label>
                <input type="text" class="form-control" required name="zipCode" />
            </div>
            <div class="form-group">
                <label for="City">By</label>
                <input type="text" class="form-control" name="City" />
            </div>
            <div class="form-group">
                <label for="phoneNr">Telefon</label>
                <input type="tel" class="form-control" name="phoneNr" />
            </div>
            <div class="form-group">
                <label for="country">Land</label>
                <select name="country" class="form-control">
                    <option value="Denmark">
                        Denmark
                    </option>
                    <option value="Sverige">
                        Sverige
                    </option>
                    <option value="Norge">
                        Norge
                    </option>
                </select>
            </div>
            <br /><br /><br />
            <div class="form-group">
                <label for="cardNumber">Kortnummer</label>
                <input type="text" class="form-control" name="cardNumber" />
            </div>
            <div class="form-group">
                <label for="month">udløbs måned</label>
                <input type="text" class="form-control" name="month" />
            </div>
            <div class="form-group">
                <label for="year">udløbs år</label>
                <input type="text" class="form-control" name="year" />
            </div>
            <div class="form-group">
                <label for="cvc">CVC</label>
                <input type="text" class="form-control" name="cvc" />
            </div>
            <input type="submit" class="btn btn-primary" value="Betal med stripe" />
        </form>
    </div>
    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Navn</td>
                    <td>Antal</td>
                    <td>Enheds pris</td>
                    <td>Total pris</td>
                </tr>
            </thead>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Amount stk</td>
                    <td>DKK @item.Price</td>
                    <td class="text-right">DKK <b>@item.TotalPrice</b></td>
                </tr>

            }
            <tr>
                <td><b>IALT</b></td>
                <td></td>
                <td></td>
                <td class="text-right">DKK <b>@ViewBag.TotalOrderPrice</b></td>
            </tr>
        </table>

    </div>

</div>